{
  "compilerOptions": {
    "target": "ES6", // or "ES2020" if you're using modern Node
    "module": "CommonJS", // <-- Use CommonJS for require/module.exports
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true // optional: import JSON files
  },
  "include": ["src"]
}
